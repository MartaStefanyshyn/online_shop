<h1>Categories</h1>
 <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <div class="list-group">
          <% @categories.each do |category| %>
            <%= link_to category.title, category, :class => 'list-group-item' %>
            <% if current_user.role == "admin" %><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-xs' %><% end %>
            <% if current_user.role == "admin" %><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %><% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
<br>
<% if current_user.role == "admin" %>
<%= link_to new_category_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Category
<% end %>
<% end %>

