<h1>Editing Order Product</h1>

<div class="container-fluid">

<h1>Your Order</h1>
<%= form_for(@order_product) do |f| %>
  <% if @order_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order_product.errors.count, "error") %> prohibited this order_product from being saved:</h2>

      <ul>
      <% @order_product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><div class="form-group">
             <%= f.number_field :amount, min: 0, class: "form-control" %>
            </div></td>
        <td><%= @order_product.product.name %></td>
        <td><%= @order_product.product.description %></td>
        <td><%= @order_product.product.price %></td>
        <td><%= @order_product.total_price %></td>
        <td><div class="actions">
              <%= f.submit "Update Amount", class: "btn btn-primary" %>
            </div></td>
      </tr>
  </tbody>
</table>

 <% end %>
</div>
