<p id="notice"><%= notice %></p>
<div class="container-fluid">
<h1>Listing Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>State</th>
      <th>Total price</th>
      <th>Amount of products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <% if order.state == "active" %>
      <tr class="success">
        <td><%= order.state %></td>
        <td><%= order.total %></td>
        <td><%= order.quantity %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
      <% else %>
      <tr class="warning">
        <td><%= order.state %></td>
        <td><%= order.total %></td>
        <td><%= order.quantity %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>

