<div class="container-fluid">

<h1>Your Order</h1>

<% @order.order_products.each do |item| %>
<div class="main-content">
<div class="row">
  <div class="col-md-4">
    <%= image_tag item.product.photo.url(:large) %> 
  </div>
  <div class="col-md-4">
    <%= item.product.name %><br>
        <%= item.product.description %>
  </div>
  <div class="col-md-4">
    <%= number_to_currency(item.product.price)%><br>
  </div>
 </div>
</div>
<% end %>
<div class="secondary-content">
 <div class="col-sm-3">
   Total: <%= @order.total %>
 </div>
</div>  
<% if @order.state == "active" %>
<%= link_to 'Buy', finish_order_path(@order), data: { confirm: 'Are you sure you want to finish this order?' } , class: 'btn btn-primary', "data-popup" => true %>
<% end %>
</div>
</br>
<%= link_to orders_path, class: 'btn btn-info btn-xs' do%>
 <i class="glyphicon glyphicon-menu-left"></i>Back
 <% end %>

