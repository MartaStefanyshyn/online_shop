<div class="row">
  <div class="col-md-9">
    <%= image_tag @product.photo.url(:large) %> 
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @product.name %></p>
    <p><b>Description: </b><%=  sanitize(@product.description) %></p>
    <p><b>Price: </b><%= @product.price %></p>
    <p>
      <% if current_user.role == "admin" %><%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary btn-xs' %> |
      <%= link_to 'Destroy', @product, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger btn-xs' %> |<% end %>
      <%= link_to 'Back', products_path, class: 'btn btn-info btn-xs' %>
    </p>
  </div>
</div>

